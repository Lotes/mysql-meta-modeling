/**
 * Define a grammar called Hello
 */
grammar Meta;

translationUnit: 
	classifier+
;

classifier:
	(datatype | class) SEMICOLON
;

datatype:
	'datatype' ID
	LBRACE 
	
	RBRACE
;

LBRACE: '{';
RBRACE: '}';

SEMICOLON: ';';

ID : [a-zA-Z_][a-zA-Z0-9_]*;             // match lower-case identifiers

WS : [ \t\r\n]+ -> skip ; // skip spaces, tabs, newlines

