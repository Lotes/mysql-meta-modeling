# import "table"
# import "function_is_package"
# import "function_package_contains_name"
# import "function_create_classifier"

CREATE FUNCTION create_class (
		given_name VARCHAR(50),
		given_abstraction ENUM('CLASS', 'ABSTRACT', 'INTERFACE'),
		given_parent_package_id INT,
	)
	RETURNS INT
	COMMENT 'creates a new class by name, abstraction and parent package, returns id on success or -1 on error.'
	LANGUAGE SQL
	NOT DETERMINISTIC
	MODIFIES SQL DATA
	SQL SECURITY DEFINER
BEGIN
	DECLARE my_id INT;

	--create named element
	SET my_id = create_classifier(given_name, 'CLASS', given_parent_package);
	IF my_id = -1 THEN
		RETURN -1;
	END IF;
	
	--then the classifier
	INSERT INTO classifiers (id, parent_package_id) VALUES(my_id, given_parent_package_id);
	RETURN my_id;
END;