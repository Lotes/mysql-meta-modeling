package de.loteslab.mmm.sqlc;

import java.util.HashMap;
import java.util.HashSet;

public class MySqlObject {
	private static HashMap<MySqlObjectType, HashMap<String, MySqlObject>> created = new HashMap<MySqlObjectType, HashMap<String, MySqlObject>>();
	
	public static MySqlObject create(MySqlObjectType type, String name) {
		String normalizedName = name.toUpperCase();
		if(!created.containsKey(type))
			created.put(type, new HashMap<String, MySqlObject>());
		HashMap<String, MySqlObject> subSet = created.get(type);
		if(!subSet.containsKey(normalizedName))
			subSet.put(normalizedName, new MySqlObject(type, normalizedName));
		return subSet.get(normalizedName);
	}
	
	private MySqlObjectType type;
	private String name;
	
	private MySqlObject(MySqlObjectType type, String name) {
		this.type = type;
		this.name = name;
	}
	
	@Override
	public boolean equals(Object obj) {
		if(obj instanceof MySqlObject)
		{
			MySqlObject other = (MySqlObject)obj;
			return other.type == type && other.name.equals(name);	
		}
		else
			return false;
	}
	
	@Override
	public int hashCode() {
		return type.hashCode() + 13 * name.hashCode();
	}
}
